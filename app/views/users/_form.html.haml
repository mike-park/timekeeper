= simple_form_for(@user) do |f|
  = f.error_notification

  = f.input :name
  = f.input :email
  = f.input :password
  = f.input :password_confirmation
  = f.association :roles, :label_method => lambda {|t| t.name.titleize}
  = f.association :therapist

  = f.button :submit
  = cancel_link users_path
