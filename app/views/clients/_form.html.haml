.row
  .col-sm-6
    = simple_form_for(@client) do |f|
      = f.error_notification

      = f.input :active
      = f.input :first_name
      = f.input :last_name
      .row
        .col-xs-5= datepicker_field(f, :dob)
      = f.input :therapist_list, label: "Therapists (available list #{Therapist.abbreviations.join(', ')})"

      = f.button :submit, class: 'btn-primary'
      = cancel_link clients_path
