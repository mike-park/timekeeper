.row-fluid
  .span8
    %h4 Included Events
    %table.table.tablesorter.table-bill-items.table-condensed
      %thead
        %tr
          %th Name
          %th Date
          %th Activity
          %th
      %tbody
        - bill_items.each do |bi|
          %tr[bi]
            %td= client_name bi.client, length: 30
            %td= bi.occurred_on.to_s(:de)
            %td= bi.event_category_title
            %td= link_to 'Remove', bi, method: :delete, class: 'btn btn-mini'
